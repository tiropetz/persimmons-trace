{
  "name": "next",
  "dependencies": {
    "next": "12.0.2",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "styled-components": "^5.3.3"
  },
  "devDependencies": {
    "@stylelint/postcss-css-in-js": "^0.37.2",
    "@types/node": "16.11.6",
    "@types/react": "17.0.34",
    "@types/styled-components": "^5.1.15",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "@typescript-eslint/parser": "^5.3.1",
    "cspell": "^5.12.6",
    "eslint": "^8.2.0",
    "eslint-config-airbnb": "19.0.0",
    "eslint-config-next": "12.0.4",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-unicorn": "^38.0.1",
    "fixpack": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.1",
    "prettier-plugin-organize-imports": "^2.3.4",
    "stylelint": "13.13.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "22.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-declaration-block-no-ignored-properties": "^2.5.0",
    "stylelint-no-unsupported-browser-features": "^5.0.2",
    "stylelint-order": "^5.0.0",
    "stylelint-prettier": "^2.0.0",
    "stylelint-processor-styled-components": "^1.10.0",
    "ts-unused-exports": "^7.0.3",
    "typescript": "4.4.4"
  },
  "private": true,
  "scripts": {
    "build": "next build",
    "check-all": "run-s fix check-code test",
    "check-code": "run-p spell-check lint type-check",
    "dev": "next dev",
    "fix": "run-p fix:*",
    "fix-ts-by-eslint": "eslint \"./src/**/*.{ts,tsx}\" --fix",
    "fix-ts-by-prettier": "prettier \"./src/**/*.{ts,tsx}\" --write",
    "fix:config": "prettier \"./*.{js,json}\" \"./**/*.js\" --write",
    "fix:pack": "fixpack",
    "fix:ts": "run-s fix-ts-by-eslint fix-ts-by-prettier",
    "lint": "run-p lint:*",
    "lint:ts": "eslint \"./src/**/*.{ts,tsx}\"",
    "spell-check": "cspell \"./src/**/*.{ts,tsx}\"",
    "start": "next start",
    "test": "echo \"jest は cli の表示をリセットしてしまうため、 check-all の後ろに直列でつなげる\"",
    "ts-unused-exports": "ts-unused-exports ./tsconfig.json --searchNamespaces",
    "type-check": "tsc",
    "lint:css": "stylelint \"./src/**/*.{ts,tsx}\""
  }
}
